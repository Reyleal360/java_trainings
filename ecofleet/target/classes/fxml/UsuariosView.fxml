<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.mycompany.ecofleet.controlador.UsuariosController">

    <top>
        <HBox spacing="10" padding="10">
            <TextField fx:id="nombreField" promptText="Nombre"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="telField" promptText="Teléfono"/>
            <Button text="Agregar" onAction="#crearUsuario"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tablaUsuarios">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colTel" text="Teléfono" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
